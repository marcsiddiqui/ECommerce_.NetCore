@model ECommerce_New.ModelClasses.CustomerModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Pluto - Responsive Bootstrap Admin Panel Templates</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <!-- site css -->
    <link rel="stylesheet" href="~/Templates/Admin/style.css" />
    <!-- responsive css -->
    <link rel="stylesheet" href="~/Templates/Admin/css/responsive.css" />
    <!-- color css -->
    <link rel="stylesheet" href="~/Templates/Admin/css/colors.css" />
    <!-- select bootstrap -->
    <link rel="stylesheet" href="~/Templates/Admin/css/bootstrap-select.css" />
    <!-- scrollbar css -->
    <link rel="stylesheet" href="~/Templates/Admin/css/perfect-scrollbar.css" />
    <!-- custom css -->
    <link rel="stylesheet" href="~/Templates/Admin/css/custom.css" />
    <!-- calendar file css -->
    <link rel="stylesheet" href="~/Templates/Admin/css/semantic.min.css" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="inner_page login">
    <div class="full_container">
        <div class="container">
            <div class="center verticle_center full_height">
                <div class="login_section">
                    <div class="logo_login">
                        <div class="center">
                            <img width="210" src="~/Templates/Admin/images/logo/logo.png" alt="#" />
                        </div>
                    </div>
                    <div class="login_form">
                        <form asp-action="Login">
                            <fieldset>
                                <div class="field">
                                    <label class="label_field">Email Address</label>
                                    <input asp-for="Username" class="form-control" />
                                </div>
                                <div class="field">
                                    <label class="label_field">Password</label>
                                    <input asp-for="Password" class="form-control" />
                                </div>
                                <div class="field">
                                    <label class="label_field hidden">hidden label</label>
                                    <label class="form-check-label"><input type="checkbox" class="form-check-input"> Remember Me</label>
                                    <a class="forgot" href="">Forgotten Password?</a>
                                </div>
                                <div class="field margin_0">
                                    <label class="label_field hidden">hidden label</label>
                                    <button class="main_bt">Sing In</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/Templates/Admin/js/jquery.min.js"></script>
    <script src="~/Templates/Admin/js/popper.min.js"></script>
    <script src="~/Templates/Admin/js/bootstrap.min.js"></script>
    <!-- wow animation -->
    <script src="~/Templates/Admin/js/bootstrap.min.js"></script>
    <!-- select country -->
    <script src="~/Templates/Admin/js/bootstrap-select.js"></script>
    <!-- nice scrollbar -->
    <script src="~/Templates/Admin/js/perfect-scrollbar.min.js"></script>
    <script>
        var ps = new PerfectScrollbar('#sidebar');
    </script>
    <!-- custom js -->
    <script src="~/Templates/Admin/js/custom.js"></script>
</body>
</html>